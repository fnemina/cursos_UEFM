% Fondo
\setbeamertemplate{background}{
  \begin{tikzpicture}
  \useasboundingbox (0,0) rectangle(\the\paperwidth,\the\paperheight);
  % Logo ministerio
  \node[anchor=north west] (ministerio) at (0.03in,\the\paperheight-0.02in) {\includegraphics[height=0.31in]{logos/logo-ministerio.png}};
  % Logo conae
  \node[anchor=north east] (conae) at (\the\paperwidth-.03in,\the\paperheight-0.02in) {\includegraphics[height=0.31in]{logos/logo-conae.png}};
