\mode<presentation>

% Hubicacion del titulo en una pagina
\defbeamertemplate*{frametitle}{conae}[1][]
{
\vskip-0.5cm%
  \begin{beamercolorbox}[wd=\paperwidth,ht=1.2cm]{frametitle}
  \begin{tikzpicture}
  \useasboundingbox[](0,0) rectangle(\the\paperwidth,0.0);
   \ifx\insertframesubtitle\@empty%
      {\node[anchor=west, conae-azul,font=\large] at (3.8,0.61){\insertframetitle};}
      \else%
      {\node[anchor= west, conae-azul,font=\large] at (3.8,0.81){\insertframetitle};%
       \node[anchor= west, conae-azul,font=\small] at (3.8,0.41){\insertframesubtitle};}%
      \fi
  \end{tikzpicture}
  \end{beamercolorbox}
}

\defbeamertemplate*{section page}{conae}[1][]
{
    % Titulo de desccion
    \begin{beamercolorbox}[wd=\paperwidth,ht=1.2cm]{section title}
    \begin{tikzpicture}[remember picture,overlay]
        \node[anchor=north,yshift=-1.5in, conae-azul, font=\huge] at (current page.north) {
          {\insertsection}%
        };
    \end{tikzpicture}
  \end{beamercolorbox}
  % Logo externo solo si existe
  \ifx\@logoext\empty
  \else
  \begin{tikzpicture}[remember picture,overlay]
      \node[anchor=south west] at (current page.south west) {
      \begin{beamercolorbox}[left]{logo}
        \includegraphics[height=0.31in]{\@logoext}
      \end{beamercolorbox}
      };
  \end{tikzpicture}
  \fi
}

\mode<all>
